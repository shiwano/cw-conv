{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema#",
  "id": "http://schema.cardwirth.org/scene#",
  "required": true,

  "properties": {
    "type": {
      "enum": ["scene"],
      "required": true
    },

    "id": {
      "type": "integer",
      "minimum": 0,
      "required": true
    },

    "name": {
      "type": "string",
      "required": true
    },

    "cardArrangement": {
      "$ref": "http://schema.cardwirth.org/core#cardArrangement",
      "required": true
    },

    "events": {
      "type": "array",
      "required": true,
      "items": {
        "$ref": "http://schema.cardwirth.org/event"
      }
    },

    "menuCards": {
      "type": "array",
      "required": true,
      "items": {
        "$ref": "http://schema.cardwirth.org/menu_card"
      }
    },

    "backgrounds": {
      "type": "array",
      "required": true,
      "items": {
        "$ref": "http://schema.cardwirth.org/background"
      }
    }
  }
}
