{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema#",
  "id": "http://schema.cardwirth.org/summary#",
  "required": true,

  "properties": {
    "type": {
      "type": "string",
      "required": true
    },

    "title": {
      "type": "string",
      "required": true
    },

    "description": {
      "type": "string",
      "required": true
    },

    "author": {
      "type": "string",
      "required": true
    },

    "defnitions": {
      "type": "object",
      "required": true,

      "properties": {
        "flags": {
          "type": "array",
          "required": true,
          "items": {
            "$ref": "http://schema.cardwirth.org/flag"
          }
        },

        "stepsList": {
          "type": "array",
          "required": true,
          "items": {
            "$ref": "http://schema.cardwirth.org/steps"
          }
        }
      }
    },

    "prerequisite": {
      "type": "object",
      "required": true,

      "properties": {
        "achievementsNumber": {
          "type": "integer",
          "minimum": 0,
          "required": true
        },

        "achievements": {
          "type": "array",
          "required": true,
          "items": {
            "type": "string"
          }
        }
      }
    },

    "startSceneId": {
      "type": "integer",
      "minimum": 0,
      "required": true
    },

    "recommendedLevel": {
      "type": "object",
      "required": true,

      "properties": {
        "min": {
          "type": "integer",
          "minimum": 0,
          "required": true
        },

        "max": {
          "type": "integer",
          "minimum": 0,
          "required": true
        }
      }
    }
  }
}
