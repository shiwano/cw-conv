{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema#",
  "id": "http://schema.cardwirth.org/item_card#",
  "required": true,

  "properties": {
    "type": {
      "enum": ["itemCard"],
      "required": true
    },

    "usageLimit": {
      "type": "integer",
      "minimum": 0,
      "maximum": 10,
      "required": true
    },

    "usageLimitMax": {
      "type": "integer",
      "minimum": 0,
      "maximum": 10,
      "required": true
    },

    "price": {
      "type": "integer",
      "minimum": 0,
      "maximum": 30000,
      "required": true
    },

    "evasionBonusAlways": {
      "type": "integer",
      "maximum": 10,
      "minimum": -10,
      "required": true
    },

    "resistanceBonusAlways": {
      "type": "integer",
      "maximum": 10,
      "minimum": -10,
      "required": true
    },

    "defenseBonusAlways": {
      "type": "integer",
      "maximum": 10,
      "minimum": -10,
      "required": true
    },

    "id": {
      "type": "integer",
      "minimum": 0,
      "required": true
    },

    "name": {
      "type": "string",
      "required": true
    },

    "description": {
      "type": "string",
      "required": true
    },

    "image": {
      "type": "string",
      "format": "uri",
      "required": true
    },

    "aptitude": {
      "type": "object",
      "required": true,

      "properties": {
        "physical": {
          "type": "string",
          "required": true
        },

        "mental": {
          "type": "string",
          "required": true
        }
      }
    },

    "ignoreSilence": {
      "type": "boolean",
      "required": true
    },

    "targetAll": {
      "type": "boolean",
      "required": true
    },

    "target": {
      "$ref": "http://schema.cardwirth.org/core#/cardTarget",
      "required": true
    },

    "phenomenonType": {
      "$ref": "http://schema.cardwirth.org/core#/phenomenonType",
      "required": true
    },

    "reactionType": {
      "$ref": "http://schema.cardwirth.org/core#/reactionType",
      "required": true
    },

    "successRate": {
      "type": "integer",
      "maximum": 5,
      "minimum": -5,
      "required": true
    },

    "animationType": {
      "$ref": "http://schema.cardwirth.org/core#/animationType",
      "required": true
    },

    "evasionBonus": {
      "type": "integer",
      "maximum": 10,
      "minimum": -10,
      "required": true
    },

    "resistanceBonus": {
      "type": "integer",
      "maximum": 10,
      "minimum": -10,
      "required": true
    },

    "defenseBonus": {
      "type": "integer",
      "maximum": 10,
      "minimum": -10,
      "required": true
    },

    "soundBefore": {
      "type": "string",
      "format": "uri",
      "required": true
    },

    "soundAfter": {
      "type": "string",
      "format": "uri",
      "required": true
    },

    "keycodes": {
      "type": "array",
      "required": true,
      "items": {
        "type": "string"
      }
    },

    "rarity": {
      "$ref": "http://schema.cardwirth.org/core#/rarity",
      "required": true
    },

    "scenario": {
      "type": "string",
      "required": true
    },

    "author": {
      "type": "string",
      "required": true
    },

    "reserved": {
      "type": "boolean",
      "required": true
    },

    "effects": {
      "type": "array",
      "required": true,
      "items": {
      }
    },

    "events": {
      "type": "array",
      "required": true,
      "items": {
        "$ref": "http://schema.cardwirth.org/simple_event"
      }
    }
  }
}
