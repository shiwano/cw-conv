{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema#",
  "id": "http://schema.cardwirth.org/steps#",
  "required": true,

  "properties": {
    "name": {
      "type": "string",
      "required": true
    },

    "default": {
      "type": "integer",
      "minimum": 0,
      "maximum": 9,
      "required": true
    },

    "valueNames": {
      "type": "array",
      "required": true,
      "minItems": 10,
      "maxItems": 10,

      "items": {
        "type": "string"
      }
    }
  }
}
